<!--pages/edid/edit.wxml-->
<view class='wrapper' style='justify-content:space-between;' bindtap='changeModel'>
    <text class='title'>更改模板</text>
    <text class='model' space='emsp'>模板1 > </text>
</view>

<view class='wrapper'>
    <text class='title'>姓名</text>
    <input value='{{name}}' bindinput='editName'/>
</view>

<view class='wrapper'>
    <text class='title'>职位</text>
    <input value='{{position}}' bindinput='editPosition'/>
</view>

<button bindtap='ensure'>确认</button>